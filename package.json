{
  "name": "career-hub",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install",
    "install:services": "npm run install:shared && npm run install:shell && npm run install:auth && npm run install:user-service",
    "install:shared": "cd shared/types && npm install && cd ../utils && npm install",
    "install:shell": "cd micro-frontends/shell && npm install",
    "install:auth": "cd micro-frontends/auth && npm install", 
    "install:user-service": "cd micro-services/user-service && npm install",
    "build:shared": "npm run build --workspace=@career-hub/shared-types && npm run build --workspace=@career-hub/shared-utils",
    "dev": "concurrently \"npm run dev:shell\" \"npm run dev:auth\" \"npm run dev:user-service\"",
    "dev:shell": "npm run dev --workspace=micro-frontends/shell",
    "dev:auth": "npm run dev --workspace=micro-frontends/auth -- --port 3001",
    "dev:user-service": "npm run dev --workspace=@career-hub/user-service"
  },
  "workspaces": [
    "micro-frontends/*",
    "micro-services/*",
    "shared/types",
    "shared/utils"
  ],
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "lerna": "^8.2.3",
    "typescript": "^5.0.0",
    "concurrently": "^8.2.2"
  },
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gulnarhasanzada/careerHub.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/gulnarhasanzada/careerHub/issues"
  },
  "homepage": "https://github.com/gulnarhasanzada/careerHub#readme"
}
